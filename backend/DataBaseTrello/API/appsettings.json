{
    "ConnectionStrings": {
        "DefaultConnection": "Host=db;Port=5432;Database=db2;Username=postgres;Password=228"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Error"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/log-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ] 
    },
    "AllowedHosts": "*",
    "AuthSettings": {
        "SecretKey": "secretKey",
        "AccessTokenExpires": "00:15:00",
        "RefreshTokenExpires": "1.00:00:00"
        
    }
}
